{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}